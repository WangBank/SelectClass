      <script type="text/javascript">
          $(function () {
              $(".table input:checkbox").attr("checked", false);
              $("#cancel").click(selectf);

              function selectf() {
                  var end = confirm("确定取消选课吗？");
                  if (end == true) {
                      var data = [];
                      $(function () {
                          $("#table").find(":checkbox:checked").each(function () {
                              var val = $(this).parent().next().text();
                              data.push(val);
                          });
                          $.ajax({
                              type: "Post",
                              async: true,
                              url: "/Student/cancelselect",
                              data: { subId: data.toString() },
                              success: function (msg) {
                                  if (msg == "ok") {
                                      window.location.href = "/Student/sxkc";
                                      alert("取消选课成功！");
                                  } else {
                                      alert(data);
                                  }
                              }
                          });
                      });
                  } else {
                      window.location.href = "/Student/kckc";
                  }
              }
          }
              );
            </script>
