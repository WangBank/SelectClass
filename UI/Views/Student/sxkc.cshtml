            <div style="margin-left:100px;margin-top:20px;margin-bottom:-40px">
            <td><button type="submit" id="cancel" class="btn btn-primary">取消选课</button></td>
                </div>
            <section class="tables">
                    <div>
                        <table class="table" id="table">

                            <thead>
                                <tr>
                                    <th></th>
                                    <th>序号</th>
                                    <th>课程名称</th>
                                    <th>任课老师</th>
                                    <th>课程学时</th>
                                    <th>上课教室</th>
                                    <th>课程学分</th>
                                    <th>开课时间</th>
                                    <th>结课时间</th>
                                    <th>需要人数</th>
                                    <th>已选人数</th>
                                    <th>课程类型</th>
                                    <th>课程状态</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    @foreach (var row in Model)
                                    {
                                        <tr>

                                            <td>
                                                <input type="checkbox" checked="checked"></td>
                                            <td>@row.SubID</td>
                                            <td>@row.SubName</td>
                                            @{
                                        BLL.BLLTeacher blltea = new BLL.BLLTeacher();
                                        string teacherame = blltea.Details(c => c.TeacherID == row.TeacherID).FirstOrDefault().TeacherName;
                                            }
                                            <td>@teacherame</td>
                                            <td>@row.ClassTime</td>
                                            @{
                                        BLL.BLLClass bllclass = new BLL.BLLClass();
                                        string classname = bllclass.Details(c => c.ClassForm == row.ClassAddress).FirstOrDefault().ClassName;
                                            }
                                            <td>@classname</td>
                                            <td>@row.SubPoint</td>
                                            <td>@row.StartTime</td>
                                            <td>@row.EndTime</td>
                                            <td>@row.NeedPeople</td>
                                            <td>@row.ClassPeople</td>
                                            <td>@row.SubJJ</td>
                                            @{
                                        string state = "";
                                        if (row.ClassPeople < row.NeedPeople)
                                        {
                                            state = "未满";
                                        }
                                        else { state = "已满"; }
                                       
                                            }
                                            <td>@state</td>
                                            
                                        </tr> 
                                    }
                                </tr>

                            </tbody>
                        </table>
                    </div>
