@model Model.Student

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Student</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.StuID)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.StuID)
            @Html.ValidationMessageFor(model => model.StuID)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.StuName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.StuName)
            @Html.ValidationMessageFor(model => model.StuName)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.StuNum)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.StuNum)
            @Html.ValidationMessageFor(model => model.StuNum)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.StuPwd)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.StuPwd)
            @Html.ValidationMessageFor(model => model.StuPwd)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ClassForm, "Class")
        </div>
        <div class="editor-field">
            @Html.DropDownList("ClassForm", String.Empty)
