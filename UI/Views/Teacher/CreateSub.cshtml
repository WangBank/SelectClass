            <div class="content-inner">
                <!-- Page Header-->
                <header class="page-header">
                    <div class="container-fluid">
                        <h2 class="no-margin-bottom">添加</h2>
                    </div>
                </header>
                <!-- Breadcrumb-->
                <div class="breadcrumb-holder container-fluid">
                    <ul class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/Teacher/Index">首页</a></li>
                        <li class="breadcrumb-item active">添加课程            </li>
                    </ul>

                </div>
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-close">
                            <div class="dropdown">
                                <button type="button" id="closeCard5" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" class="dropdown-toggle"><i class="fa fa-ellipsis-v"></i></button>
                                <div aria-labelledby="closeCard5" class="dropdown-menu dropdown-menu-right has-shadow"><a href="#" class="dropdown-item remove"><i class="fa fa-times"></i>关闭</a><a href="#" class="dropdown-item edit"> <i class="fa fa-gear"></i>设置</a></div>
                            </div>
                        </div>
                        <div class="card-header d-flex align-items-center">
                            <h3 class="h4">添加课程</h3>
                        </div>
                        <div class="card-body">
                            @using (Html.BeginForm("CreateSub", "Teacher", FormMethod.Post, new { enctype = "multipart/form-data" }))
                            {
                                @Html.ValidationSummary(true)
                                <fieldset>
                                    <form class="form-horizontal">
                                        <div class="row">
                                            <label class="col-sm-3 form-control-label">课程信息</label>
                                            <div class="col-sm-9">
                                                <div class="form-group-material">
                                                    <input id="register-className" type="text" name="subName" required class="input-material">
                                                    <label for="register-username" class="label-material">课程名称</label>
                                                </div>
                                                <div class="form-group-material">
                                                    <input id="register-DM" type="text" name="subDM" required class="input-material">
                                                    <label for="register-username" class="label-material">课程代码</label>
                                                </div>
                                                <div class="form-group row">
                                                    <label class="col-sm-3 form-control-label">任课老师</label>

                                                    <div class="col-sm-9">
                                                        @Html.DropDownList("TeacherID", "请选择教师")
                                                        @Html.ValidationMessageFor(model => model.FirstOrDefault().TeacherID)
                                                    </div>

                                                </div>
                                                <div class="form-group-material">
                                                    <input id="register-time" type="text" name="subTime" required class="input-material">
                                                    <label for="register-email" class="label-material">课程学时</label>
                                                </div>
                                                @{
                                List<SelectListItem> listProductTypes = ViewData["ClassForm"] as List<SelectListItem>;
                                                    }
@*                                                <div class="form-group-material">
                                                    <input id="register-room" type="text" name="subRoom" required class="input-material">
                                                    <label for="register-email" class="label-material">上课教室</label>
                                                </div>*@

                                                <div class="form-group row">
                                                    <label class="col-sm-3 form-control-label">上课教室</label>

                                                    <div class="col-sm-9">
                                                        @Html.DropDownList("ClassForm", listProductTypes, new {
                                                   datatype=@"/^[1-9]+$/",
                                                    sucmsg=" ",
                                                    nullmsg="请选择上课教室",
                                                     errormsg="请选择上课教室"
                                                   })
                                                    </div>

                                                </div>

                                                <div class="form-group-material">
                                                    <input id="register-grade" type="text" name="subPoint" required class="input-material">
                                                    <label for="register-email" class="label-material">课程学分</label>
                                                </div>
                                                <div class="form-group-material">
                                                    <input id="register-classBegin" type="text" name="subBegintime" required class="input-material">
                                                    <label for="register-email" class="label-material">开课时间</label>
                                                </div>
                                                <div class="form-group-material">
                                                    <input id="register-classEnd" type="text" name="subEndtime" required class="input-material">
                                                    <label for="register-email" class="label-material">结课时间</label>
                                                </div>
                                                <div class="form-group-material">
                                                    <input id="register-number" type="text" name="subPeople" required class="input-material">
                                                    <label for="register-email" class="label-material">需要人数</label>
                                                </div>
                                                <div class="form-group row">
                                                    <label for="fileInput" class="col-sm-3 form-control-label">添加图片</label>
                                                    <div class="col-sm-9">
                                                        <input name="fileInput" type="file" class="form-control-file"/>
                                                    </div>
                                                </div>
                                                <div class="form-group row">
                                                    <label class="col-sm-3 form-control-label">课程类型</label>
                                                    <div class="col-sm-9">
                                                        <div>
                                                            <input id="optionsRadios1" type="radio" checked="" value="option1" name="optionsRadios">
                                                            <label for="optionsRadios1">考试课程</label>
                                                        </div>
                                                        <div>
                                                            <input id="optionsRadios2" type="radio" value="option2" name="optionsRadios">
                                                            <label for="optionsRadios2">考察课程</label>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <div class="col-sm-4 offset-sm-3">
                                                <button type="submit" class="btn btn-secondary">取消</button>
                                                <button type="submit" class="btn btn-primary">确认添加</button>
                                            </div>
                                        </div>
                                    </form>
                                </fieldset>
                            }
                            @section Scripts {
                                @Scripts.Render("~/bundles/jqueryval")
                            }
                        </div>
                    </div>
                </div>

