@model Model.Teacher

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Teacher</legend>

        @Html.HiddenFor(model => model.TeacherID)

        <div class="editor-label">
            @Html.LabelFor(model => model.TeacherName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.TeacherName)
            @Html.ValidationMessageFor(model => model.TeacherName)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.TeacherPwd)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.TeacherPwd)
            @Html.ValidationMessageFor(model => model.TeacherPwd)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.SubID, "Sub")
        </div>
        <div class="editor-field">
            @Html.DropDownList("SubID", String.Empty)
            @Html.ValidationMessageFor(model => model.SubID)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.TeacherNum)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.TeacherNum)
            @Html.ValidationMessageFor(model => model.TeacherNum)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.TeacherPicture)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.TeacherPicture)
            @Html.ValidationMessageFor(model => model.TeacherPicture)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
